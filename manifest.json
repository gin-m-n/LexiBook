{
  "manifest_version": 3,
  "name": "Reading time",
  "description": "Add the reading time to Chrome Extension documentation articles",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "src/content.ts"
      ],
      "css": [
        "content.css"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ]
}
